<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".PetProfileActivity">

    <!-- Pet Name -->
    <TextView
        android:id="@+id/pet_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        tools:text="Buddy"/>

    <!-- Pet ID -->
    <TextView
        android:id="@+id/pet_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Pet ID: 101" />

    <!-- Species -->
    <TextView
        android:id="@+id/species_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Species: Dog"/>

    <!-- Breed -->
    <TextView
        android:id="@+id/breed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Breed: Golden Retriever"/>

    <!-- Age -->
    <TextView
        android:id="@+id/age_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Age: 5 years"/>

    <!-- Birthdate -->
    <TextView
        android:id="@+id/birthdate_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Birthdate: 2020-01-01"/>

    <!-- Notes -->
    <TextView
        android:id="@+id/notes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        tools:text="Notes: Allergic to chicken."/>

    <!-- Buttons -->
    <Button
        android:id="@+id/make_appointment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Make an Appointment" />

    <Button
        android:id="@+id/cancel_appointment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cancel Appointment"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"/>


    <Button
        android:id="@+id/view_health_logs_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View Health Logs"/>

    <Button
        android:id="@+id/edit_pet_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Edit Pet"/>

    <Button
        android:id="@+id/back_button_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back to My Pets"/>



</LinearLayout>
